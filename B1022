#include<stdio.h>
int main()
{
	int a,b,c,temp;						//应该用long整形,更大的情况下应该用long long,
	int d,ans[31],count=0,i;			//a,b皆小于2^30-1,即a+b小于2^31
	scanf("%ld%ld%d",&a,&b,&d);			//所以这里数组可以设置为31个元素
	c=a+b;
	do
	{
		temp=c%d;
		c=c/d;							//ans[count++]=temp或者更简略
		ans[count]=temp;				//ans[count++]=c%d;								
		count++;						
	}
	while(c!=0);
	for(i=count-1;i>=0;i--)
		printf("%d",ans[i]);
	return 0;
}
